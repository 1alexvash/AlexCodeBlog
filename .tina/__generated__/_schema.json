{
  "version": {
    "fullVersion": "1.4.22",
    "major": "1",
    "minor": "4",
    "patch": "22"
  },
  "meta": {
    "flags": ["experimentalData"]
  },
  "collections": [
    {
      "name": "mainConfig",
      "label": "Main config",
      "path": "content",
      "format": "json",
      "fields": [
        {
          "name": "siteDescription",
          "label": "Site description",
          "type": "rich-text",
          "isBody": true,
          "namespace": ["mainConfig", "siteDescription"],
          "searchable": true,
          "parser": {
            "type": "markdown"
          }
        },
        {
          "name": "defaultImage",
          "label": "Default image",
          "type": "string",
          "required": true,
          "namespace": ["mainConfig", "defaultImage"],
          "searchable": true
        },
        {
          "name": "authorName",
          "label": "Author name",
          "type": "string",
          "required": true,
          "namespace": ["mainConfig", "authorName"],
          "searchable": true
        },
        {
          "name": "authorPosition",
          "label": "Author position",
          "type": "string",
          "required": true,
          "namespace": ["mainConfig", "authorPosition"],
          "searchable": true
        },
        {
          "name": "socialLinks",
          "label": "Social links",
          "type": "object",
          "list": true,
          "required": true,
          "fields": [
            {
              "name": "link",
              "label": "Link",
              "type": "string",
              "required": true,
              "namespace": ["mainConfig", "socialLinks", "link"],
              "searchable": true
            },
            {
              "name": "image",
              "label": "Image",
              "type": "string",
              "required": true,
              "namespace": ["mainConfig", "socialLinks", "image"],
              "searchable": true
            },
            {
              "name": "class",
              "label": "Class",
              "type": "string",
              "namespace": ["mainConfig", "socialLinks", "class"],
              "searchable": true
            }
          ],
          "namespace": ["mainConfig", "socialLinks"],
          "searchable": true
        },
        {
          "name": "siteTitle",
          "label": "Site title",
          "type": "string",
          "isTitle": true,
          "required": true,
          "namespace": ["mainConfig", "siteTitle"],
          "searchable": true
        },
        {
          "name": "ogSiteTitle",
          "label": "OG Site Title",
          "type": "string",
          "required": true,
          "namespace": ["mainConfig", "ogSiteTitle"],
          "searchable": true
        },
        {
          "name": "postsPerPage",
          "label": "Posts per page",
          "type": "number",
          "required": true,
          "namespace": ["mainConfig", "postsPerPage"],
          "searchable": true
        }
      ],
      "namespace": ["mainConfig"]
    },
    {
      "name": "post",
      "label": "Posts",
      "path": "content/posts",
      "format": "mdx",
      "fields": [
        {
          "type": "string",
          "name": "title",
          "label": "Title",
          "isTitle": true,
          "required": true,
          "namespace": ["post", "title"],
          "searchable": true
        },
        {
          "type": "datetime",
          "name": "date",
          "label": "Date",
          "required": true,
          "ui": {},
          "namespace": ["post", "date"],
          "searchable": true
        },
        {
          "type": "image",
          "label": "Hero image",
          "name": "heroImage",
          "required": false,
          "namespace": ["post", "heroImage"],
          "searchable": false
        },
        {
          "name": "draft",
          "label": "Draft",
          "type": "boolean",
          "required": true,
          "description": "If this is checked the post will not be published",
          "namespace": ["post", "draft"],
          "searchable": true
        },
        {
          "type": "string",
          "name": "audioVersion",
          "label": "Audio version (Vocaroo)",
          "namespace": ["post", "audioVersion"],
          "searchable": true
        },
        {
          "type": "rich-text",
          "name": "body",
          "label": "Body",
          "isBody": true,
          "namespace": ["post", "body"],
          "searchable": true,
          "parser": {
            "type": "mdx"
          }
        },
        {
          "label": "Tags",
          "name": "tags",
          "type": "string",
          "list": true,
          "ui": {
            "min": 1
          },
          "namespace": ["post", "tags"],
          "searchable": true
        }
      ],
      "defaultItem": {
        "namespace": ["post", "defaultItem"]
      },
      "ui": {
        "filename": {
          "readonly": true
        }
      },
      "namespace": ["post"]
    }
  ],
  "config": {
    "media": {
      "tina": {
        "publicFolder": "public",
        "mediaRoot": "/post-images"
      }
    }
  }
}