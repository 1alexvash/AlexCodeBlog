{
  "version": {
    "fullVersion": "1.3.3",
    "major": "1",
    "minor": "3",
    "patch": "3"
  },
  "meta": { "flags": ["experimentalData", "isomorphicGitBridge"] },
  "collections": [
    {
      "name": "post",
      "label": "Posts",
      "path": "content/posts",
      "format": "md",
      "fields": [
        {
          "type": "string",
          "name": "title",
          "label": "Title",
          "isTitle": true,
          "required": true,
          "namespace": ["post", "title"]
        },
        {
          "type": "datetime",
          "name": "date",
          "label": "Date",
          "required": true,
          "namespace": ["post", "date"]
        },
        {
          "type": "image",
          "label": "Hero image",
          "name": "featuredImage",
          "required": false,
          "namespace": ["post", "featuredImage"]
        },
        {
          "name": "draft",
          "label": "Draft",
          "type": "boolean",
          "required": true,
          "description": "If this is checked the post will not be published",
          "namespace": ["post", "draft"]
        },
        {
          "type": "rich-text",
          "name": "body",
          "label": "Body",
          "isBody": true,
          "namespace": ["post", "body"]
        },
        {
          "label": "Tags",
          "name": "tags",
          "type": "string",
          "list": true,
          "namespace": ["post", "tags"]
        }
      ],
      "ui": {
        "defaultItem": {
          "title": "",
          "date": "2023-03-25T16:31:16.122Z",
          "draft": false,
          "tags": ["First Tag"]
        },
        "filename": { "readonly": true }
      },
      "namespace": ["post"]
    }
  ],
  "config": {
    "media": {
      "tina": { "publicFolder": "public", "mediaRoot": "/post-images" }
    }
  }
}
